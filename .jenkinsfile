pipeline {
    agent any

    triggers {
        cron('H */2 * * *')
    }


    environment {
        REPOSITORY_URL = 'https://github.com/tamasviktorkrizsan/module8.git'
        BRANCH = 'master'
    }

    stages {
        
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repository...'
                git branch: "${BRANCH}", url: "${REPOSITORY_URL}"
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                sh 'npm install'
                sh 'npm test'
            }
        }
    }
}